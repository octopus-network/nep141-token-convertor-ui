{
  "private": true,
  "scripts": {
    "start:mainnet": "NEAR_ENV=mainnet umi dev",
    "start:testnet": "NEAR_ENV=testnet umi dev",
    "build": "umi build",
    "postinstall": "umi generate tmp",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "test": "umi-test",
    "test:coverage": "umi-test --coverage",
    "gen": "graphql-codegen --config codegen.yml"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "@ant-design/pro-layout": "^6.5.0",
    "@apollo/client": "^3.6.4",
    "@graphql-codegen/cli": "^2.6.2",
    "@umijs/preset-react": "1.x",
    "antd": "^4.19.5",
    "big-integer": "^1.6.51",
    "big.js": "^6.1.1",
    "bignumber.js": "^9.0.1",
    "bn.js": "^5.2.0",
    "borsh": "^0.3.1",
    "graphql": "^16.5.0",
    "mathjs": "^9.3.0",
    "moment": "^2.29.1",
    "near-api-js": "^0.44.2",
    "umi": "^3.3.12"
  },
  "devDependencies": {
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@umijs/test": "^3.3.12",
    "@graphql-codegen/cli": "2.6.2",
    "@graphql-codegen/typescript": "2.4.4",
    "@graphql-codegen/typescript-operations": "2.3.1",
    "@graphql-codegen/typescript-react-apollo": "3.2.7",
    "autoprefixer": "^9.8.8",
    "lint-staged": "^10.0.7",
    "postcss": "^7.0.39",
    "prettier": "^2.2.0",
    "react": "17.x",
    "react-dom": "17.x",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.2.17",
    "typescript": "^4.1.2",
    "yorkie": "^2.0.0"
  }
}
